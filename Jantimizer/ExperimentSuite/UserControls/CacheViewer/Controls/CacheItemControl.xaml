<UserControl x:Class="ExperimentSuite.UserControls.CacheItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExperimentSuite.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="HashLable" Grid.Column="0" Content="Hash" FontSize="10"/>
            <TextBox x:Name="DataTextbox" Grid.Column="1" Text="Data" IsEnabled="False" FontSize="10"/>
            <Label x:Name="CacherServiceLabel" Grid.Column="2" Content="Service" FontSize="10"/>
        </Grid>
    </Border>
</UserControl>
