<Window x:Class="ExperimentSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSuite"
        xmlns:uc="clr-namespace:ExperimentSuite.UserControls"
        mc:Ignorable="d"
        Title="Jantimiser" Height="750" Width="1600" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="StatusTextbox" VerticalScrollBarVisibility="Visible" Margin="5" TextChanged="StatusTextbox_TextChanged"/>
                <ProgressBar x:Name="ExperimentProgressBar" Grid.Column="1" Margin="5"/>
                <StackPanel Grid.Column="2" Margin="2">
                    <CheckBox x:Name="OptimiserSentinelCheckbox" Content="Enable Optimiser Result Sentinel" Click="OptimiserSentinelCheckbox_Click"/>
                    <CheckBox x:Name="QueryPlanSentinelCheckbox" Content="Enable Query Plan Parser Sentinel" Click="QueryPlanSentinelCheckbox_Click"/>
                    <CheckBox x:Name="QuerySentinelCheckbox" Content="Enable Query Parser Sentinel" Click="QuerySentinelCheckbox_Click"/>
                </StackPanel>
                <Button x:Name="SentinelViewerButton" Content="Sentinels (0)" Grid.Column="3" Margin="5" Click="SentinelViewerButton_Click"/>
                <Button x:Name="RunButton" Content="Run!" Grid.Column="4" Margin="5" IsEnabled="False" Click="RunButton_Click"/>
                <Button x:Name="CacheViewerButton" Grid.Column="5" Content="Cache Viewer" Margin="5" Click="CacheViewerButton_Click"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="TestsPanel"/>
            </ScrollViewer>
        </Grid>

        <uc:CacheViewer x:Name="CacheViewerControl" Grid.Column="1"/>
    </Grid>
</Window>
