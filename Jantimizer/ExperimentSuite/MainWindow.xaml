<Window x:Class="ExperimentSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSuite"
        mc:Ignorable="d"
        Title="Jantimiser" Height="750" Width="1200" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="StatusTextbox" VerticalScrollBarVisibility="Visible" Width="500" TextChanged="StatusTextbox_TextChanged"/>
            <Label x:Name="ExperimentNameLabel" Content="Experiment _" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            <ProgressBar x:Name="ExperimentProgressBar" Width="300" Margin="5"/>
            <Button x:Name="RunButton" Content="Run Experiments" Margin="5" IsEnabled="False" Click="RunButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible" ScrollChanged="ScrollViewer_ScrollChanged">
            <StackPanel x:Name="TestsPanel"/>
        </ScrollViewer>
    </Grid>
</Window>
