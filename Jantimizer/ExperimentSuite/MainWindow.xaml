<Window x:Class="ExperimentSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentSuite"
        mc:Ignorable="d"
        Title="Jantimiser" Height="750" Width="1000" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="StatusTextbox" VerticalScrollBarVisibility="Visible"/>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible">
            <StackPanel x:Name="TestsPanel"/>
        </ScrollViewer>
    </Grid>
</Window>
